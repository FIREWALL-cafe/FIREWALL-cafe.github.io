{
	"manifest_version": 2,
	"name": "Supersleeper",
	"description": "Waits until nobody's looking and then resets the browser.",
	"version": "0.1.2",
	"icons": {
		"16": "icons/firewall-16.png",
		"48": "icons/firewall-48.png",
		"128": "icons/firewall-128.png"
	},
	"permissions": [
		"activeTab",
		"tabs"
	],
	"background": {
		"scripts": ["config.js", "background.js"],
		"persistent": true
	},
	"content_scripts": [{
		"matches": ["http://*/*", "https://*/*"],
		"js": [
			"jquery-2.2.0.min.js",
			"config.js",
			"supersleeper.js"
		]
	}]
}
